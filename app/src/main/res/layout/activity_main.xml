<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/renderer"
            android:layout_width="183dp"
            android:layout_height="286dp">

            <RadioButton
                android:id="@+id/renderer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Renderer1" />

            <RadioButton
                android:id="@+id/renderer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Renderer2" />

            <RadioButton
                android:id="@+id/renderer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Renderer3" />

            <RadioButton
                android:id="@+id/renderer4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Renderer4" />

            <RadioButton
                android:id="@+id/renderer5_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Renderer5_1" />

            <RadioButton
                android:id="@+id/renderer5_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Renderer5_2" />

        </RadioGroup>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>